<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <description>
        Sig In!
    </description>
    <display-name>log in</display-name>
    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>by.epam.site.servlet.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/signIn</url-pattern>
        <url-pattern>/questPlaces</url-pattern>
        <url-pattern>/removePath</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/showUsers</url-pattern>
        <url-pattern>/searchByParameter</url-pattern>
        <url-pattern>/bookQuest</url-pattern>
        <url-pattern>/showQuests</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/signupPath</url-pattern>
        <url-pattern>/signup</url-pattern>
        <url-pattern>/removeUser</url-pattern>
        <url-pattern>/changeValue</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>

    <filter>
        <filter-name>UriFilter</filter-name>
        <filter-class>by.epam.site.servlet.UriFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UriFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/signIn</url-pattern>
        <url-pattern>/questPlaces</url-pattern>
        <url-pattern>/removePath</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/showUsers</url-pattern>
        <url-pattern>/searchByParameter</url-pattern>
        <url-pattern>/bookQuest</url-pattern>
        <url-pattern>/showQuests</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/signupPath</url-pattern>
        <url-pattern>/signup</url-pattern>
        <url-pattern>/removeUser</url-pattern>
        <url-pattern>/changeValue</url-pattern>
    </filter-mapping>
</web-app>